#include <stdlib.h>
#include <stdio.h>


int main () {
	int x, y , z , num, x1, y1, z1;
	
	printf ("Digite o tamanho do pinheiro\n");
	scanf ("%d" , &num);
	
	for (x=1; x<=num; x++){
	for (y=num; y>=x; y--)
		printf (" ");
	for (z=1; z<=x*2-1; z++)
	printf ("X");	
	printf ("\n");
	}
	
	for (x1=num/2; x1<num; x1++) {
		for (y1=1; y1<=z*x/z-1;  y1++)
		printf (" ");
		printf ("XX\n");
	}
		for (x1=num/2; x1<num; x1++) {
		for (y1=1; y1<=z*x/z-2;  y1++)
		printf (" ");
		printf ("XXXX\n");
	}
	
	
	
	return 0;
}
